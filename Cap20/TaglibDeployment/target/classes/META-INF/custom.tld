<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">
	<tlib-version>1.0</tlib-version>
	<short-name>custom</short-name>
	<uri>http://custom.com/tags</uri>

	<!-- Quando uma taglib e disponibilizada em um arquivo jar, e necessario um TLD para descrever as tag handlers e as tag files. Tag 
		Files devem estar contidos dentro da pasta /WEB-INF/tags ou /META-INF/tags -->
	<tag-file>
		<name>customWriter</name>
		<path>/META-INF/tags/custom/conditionalWriter.tag</path>
	</tag-file>
</taglib>
